{
  "version": 2,
  "name": "platzi-store", // Cambia esto al nombre de tu aplicación
  "builds": [
    {
      "src": "dist/main.ts", // Ruta al archivo principal de tu aplicación
      "use": "@now/node" // Especifica el entorno Node.js
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/main.ts" // Define las rutas de tu API si es necesario
    },
    {
      "src": ".*",
      "dest": "dist/main.ts" // Enrutamiento predeterminado para la aplicación
    }
  ]
}
